<% if !Favorite.exists?(user_id: current_user.id, feedback_id: feedback.id) %>
  <%= link_to feedback_favorites_path(feedback.id), { method: :post, remote: true } do %>
    <i class="far fa-star star-icon1"></i>
  <% end %>
  <span class="star-count1"><%= feedback.favorites.count %></span>
<% else %>
  <%= link_to feedback_favorites_path(feedback_id: feedback.id, id: feedback.favorites[0].id), method: :delete, remote: true, class:"favorite-btn" do %>
    <i class="fas fa-star star-icon2"></i>
  <% end %>
  <span class="star-count2"><%= feedback.favorites.count %></span>
<% end %>